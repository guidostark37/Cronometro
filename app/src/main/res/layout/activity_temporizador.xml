<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Temporizador">

    <TextView
        android:id="@+id/txtTemporizador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="00:00:00"
        android:textSize="50dp"
        android:textColor="@color/orange"/>

    <Button
        android:id="@+id/btnstart_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTemporizador"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="237dp"
        android:backgroundTint="@color/orange"
        android:textColor="@color/black"
        android:text="Start"
        android:textSize="20dp"
        android:translationX="-30dp" />

    <Button
        android:id="@+id/btnreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTemporizador"
        android:layout_marginStart="50dp"
        android:layout_marginTop="48dp"
        android:layout_toEndOf="@id/btnstart_pause"
        android:backgroundTint="@color/orange"
        android:textColor="@color/black"
        android:text="Reset"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edthora"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtTemporizador"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:hint="0"
        android:layout_alignParentTop="true"
        android:textColor="@color/orange"
        android:layout_marginStart="26dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="198dp"
        android:layout_toStartOf="@+id/edtminutos"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2" />

    <EditText
        android:id="@+id/edtminutos"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtTemporizador"
        android:layout_alignParentTop="true"
        android:textColor="@color/orange"
        android:textAlignment="center"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="198dp"
        android:layout_toStartOf="@+id/edtsegundos"
        android:hint="0"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2" />

    <EditText
        android:id="@+id/edtsegundos"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtTemporizador"
        android:layout_alignParentTop="true"
        android:textColor="@color/orange"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="49dp"
        android:hint="0"
        android:layout_marginBottom="197dp"
        android:ems="10"
        android:textAlignment="center"
        android:maxLength="2"
        android:inputType="number" />

</RelativeLayout>